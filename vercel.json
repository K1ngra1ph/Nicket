{
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },

    {
      "src": "^/regpage$",
      "dest": "/public/regpage.html"
    },
    {
      "src": "^/regpage\\.html$",
      "status": 301,
      "headers": { "Location": "/regpage" }
    },

    {
      "src": "^/game$",
      "dest": "/public/game.html"
    },
    {
      "src": "^/game\\.html$",
      "status": 301,
      "headers": { "Location": "/game" }
    },

    {
      "src": "^/payment-verify$",
      "dest": "/public/payment-verify.html"
    },
    {
      "src": "^/payment-verify\\.html$",
      "status": 301,
      "headers": { "Location": "/payment-verify" }
    },

    {
      "src": "^/(.*)$",
      "dest": "/public/$1"
    }
  ]
}
