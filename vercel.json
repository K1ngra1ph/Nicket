{
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },

    { "src": "/game", "dest": "/public/game.html" },
    { "src": "/success", "dest": "/public/success.html" },
    { "src": "/failed", "dest": "/public/failed.html" },
    { "src": "/verify", "dest": "/public/verify.html" },

    { "src": "/game\\.html", "status": 301, "dest": "/game" },
    { "src": "/success\\.html", "status": 301, "dest": "/success" },
    { "src": "/failed\\.html", "status": 301, "dest": "/failed" },
    { "src": "/verify\\.html", "status": 301, "dest": "/verify" },

    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
