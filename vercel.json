{
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/public/index.html" },

    { "src": "^/game$", "dest": "/public/game.html" },

    { "src": "^/game\\.html$", "status": 301, "dest": "/game" },

    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
