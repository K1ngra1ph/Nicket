{
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/game",
      "dest": "/public/game.html"
    },
    {
      "src": "/success",
      "dest": "/public/success.html"
    },
    {
      "src": "/failed",
      "dest": "/public/failed.html"
    },
    {
      "src": "/game\\.html",
      "status": 301,
      "headers": { "Location": "/game" }
    },
    {
      "src": "/success\\.html",
      "status": 301,
      "headers": { "Location": "/success" }
    },
    {
      "src": "/failed\\.html",
      "status": 301,
      "headers": { "Location": "/failed" }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://sandbox.sdk.monnify.com; frame-src https://sandbox.sdk.monnify.com; connect-src 'self' https://nicket-backend.onrender.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com;"
        }
      ]
    }
  ]
}
